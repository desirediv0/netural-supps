# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/ecom-dashboard"

# JWT Secrets
ACCESS_JWT_SECRET="your-access-jwt-secret-key"
REFRESH_TOKEN_SECRET="your-refresh-token-secret"
ADMIN_JWT_SECRET="your-admin-jwt-secret-key"

# Token Lifetimes
ACCESS_TOKEN_LIFE=1d
REFRESH_TOKEN_LIFE=7d
ADMIN_TOKEN_LIFE=12h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# File Upload
UPLOAD_FOLDER=uploads

# Digital Ocean Spaces (S3-compatible storage)
SPACES_ENDPOINT="https://region.digitaloceanspaces.com"
SPACES_REGION="region"
SPACES_ACCESS_KEY="your-spaces-access-key"
SPACES_SECRET_KEY="your-spaces-secret-key"
SPACES_BUCKET="your-spaces-bucket-name"

# Razorpay Configuration
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"

# Frontend URL for email links
FRONTEND_URL="http://localhost:3000"

# Email Configuration
EMAIL_HOST="smtp.example.com"
EMAIL_PORT=587
EMAIL_USERNAME="your-email@example.com"
EMAIL_PASSWORD="your-email-password"
EMAIL_FROM="noreply@example.com"
EMAIL_FROM_NAME="Your E-commerce Store"

# Google OAuth (if using)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Base URL
BASE_URL="http://localhost:4000" 